# Application
APP_NAME=LLMTrigger
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE=trigger_events

# LLM (OpenAI compatible)
OPENAI_API_KEY=
OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_MODEL=qwen2.5:7b
OPENAI_TIMEOUT=30

# Context Window
CONTEXT_WINDOW_SECONDS=300
CONTEXT_MAX_EVENTS=100

# Notification
NOTIFICATION_MAX_RETRY=3
NOTIFICATION_DEFAULT_COOLDOWN=60

# Telegram (optional)
TELEGRAM_BOT_TOKEN=

# Email SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
